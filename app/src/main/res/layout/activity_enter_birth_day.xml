<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tjgudeman.motivational_project.EnterBirthDay">


    <TextView
        android:id="@+id/text1B"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textStyle="normal"
        android:gravity="center"
        android:textSize="32sp"
        />

    <TextView
        android:id="@+id/monthText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:gravity="left"
        android:textSize="16sp"
        android:layout_below="@+id/text1B"
        />

    <Spinner
        android:id="@+id/month"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/monthText"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/dayText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textStyle="bold"
        android:gravity="left"
        android:textSize="16sp"
        android:layout_below="@+id/month"
        />

    <Spinner
        android:id="@+id/day"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dayText"
        android:layout_marginBottom="10dp"
        />

    <TextView
    android:id="@+id/yearText"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="sans-serif-medium"
    android:textStyle="bold"
    android:gravity="left"
    android:textSize="16sp"
    android:layout_below="@+id/day"
    />

    <Spinner
        android:id="@+id/year"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/yearText"
        android:layout_marginBottom="10dp"
        />

    <LinearLayout
        android:id="@+id/LayoutBottomButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <Button
            android:id="@+id/moveOn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="nextView"/>

    </LinearLayout>



</RelativeLayout>


